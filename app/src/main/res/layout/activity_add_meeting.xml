<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ProgressBar
        android:id="@+id/pb_add_meeting"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <ScrollView xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            tools:context=".LoginActivity">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="New Meeting"
                android:textSize="25sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/darker_gray" />

            <ProgressBar
                android:id="@+id/pb_spinner"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Student"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spn_student"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:ems="10"
                    android:visibility="visible"
                    tools:layout_editor_absoluteX="68dp"
                    tools:layout_editor_absoluteY="85dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Student"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/meet_money"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:ems="10"
                    android:layout_weight="2"
                    android:hint="Money"
                    android:inputType="number"
                    tools:layout_editor_absoluteX="68dp"
                    tools:layout_editor_absoluteY="85dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:text="Is Paid"
                    tools:layout_editor_absoluteX="15dp"
                    tools:layout_editor_absoluteY="16dp" />

                <Spinner
                    android:id="@+id/meet_paid"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:ems="10"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/boolean_Spinner"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:text="Is Done"
                    tools:layout_editor_absoluteX="15dp"
                    tools:layout_editor_absoluteY="16dp" />

                <Spinner
                    android:id="@+id/meet_done"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:ems="10"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/boolean_Spinner"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:text="Date"
                    tools:layout_editor_absoluteX="15dp"
                    tools:layout_editor_absoluteY="16dp" />

                <EditText
                    android:id="@+id/mostrar_fecha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:hint="@string/formato_fecha"
                    android:focusable="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:text="Time"
                tools:layout_editor_absoluteX="15dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/mostrar_hora"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:hint="@string/formato_hora"
                android:focusable="false"
                android:layout_marginBottom="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_add_meeting"
                android:background="@color/colorPrimary"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Add" />

        </LinearLayout>
</ScrollView>
</RelativeLayout>