<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ProgressBar
        android:id="@+id/pb_register"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".LoginActivity" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Personal Data"
            android:textSize="25sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginBottom="15dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/txt_dni"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="DNI"
            android:layout_marginBottom="5dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/edt_dni"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="text"
            android:layout_marginBottom="5dp"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="85dp" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Name"
            android:layout_marginBottom="5dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_marginBottom="10dp"
            android:inputType="text"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="85dp" />

        <TextView
            android:id="@+id/txt_surname1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Surname1"
            android:layout_marginBottom="5dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/edt_surname1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_marginBottom="10dp"
            android:inputType="text"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="85dp" />

        <TextView
            android:id="@+id/txt_surname2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Surname2"
            android:layout_marginBottom="5dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/edt_surname2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_marginBottom="10dp"
            android:inputType="text"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="85dp" />

        <TextView
            android:id="@+id/txt_birthday"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Birthday"
            android:layout_marginBottom="5dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_day"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textAlignment="viewEnd"
                android:text="Day"
                android:layout_marginEnd="5dp" />

            <EditText
                android:id="@+id/edt_day"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="dd"
                android:textSize="15sp"
                android:textAlignment="center"
                android:ems="10"
                android:layout_marginBottom="10dp"
                android:inputType="date"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="85dp" />

            <TextView
                android:id="@+id/txt_month"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:text="Month"
                android:layout_marginEnd="5dp"
                tools:layout_editor_absoluteX="15dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/edt_month"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="mm"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:inputType="date"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="85dp" />

            <TextView
                android:id="@+id/txt_year"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Year"
                android:textAlignment="textEnd"
                android:layout_marginEnd="5dp"
                tools:layout_editor_absoluteX="15dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/edt_year"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:ems="10"
                android:hint="yyyy"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:inputType="date"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="85dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Email"
            android:layout_marginBottom="5dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_marginBottom="10dp"
            android:inputType="textEmailAddress"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="85dp" />

        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Phone"
            android:layout_marginBottom="5dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_marginBottom="10dp"
            android:inputType="phone"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="85dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Sign in Data"
            android:textSize="25sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginBottom="15dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/txt_user"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="User"
            android:layout_marginBottom="5dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/edt_user"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_marginBottom="10dp"
            android:inputType="text"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="85dp" />

        <TextView
            android:id="@+id/txt_pass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Password"
            android:layout_marginBottom="5dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/edt_pass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="85dp" />

        <TextView
            android:id="@+id/txt_pass2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Repeat Password"
            android:layout_marginBottom="5dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/edt_pass2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="85dp" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Register"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/txt_register"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:onClick="goRegister"
            android:text="Got an account? Click here"
            android:textColor="#2a4779"
            android:textStyle="italic" />

    </LinearLayout>
</ScrollView>
</RelativeLayout>